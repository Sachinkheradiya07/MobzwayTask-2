<% layout('layouts/boilerplate') %>

<body>
  <div class="container mt-3">
    <h1>User Details</h1>
    <div id="name" class="mb-3"></div>
    <div id="email" class="mb-2"></div>
    <div id="socketId" class="mb-2"></div>
    <input type="hidden" id="userId" value="<%= userId %>" />

    <h2 class="mt-4">All Connected Users</h2>
    <div id="userList" class="list-group mb-4"></div>

    <div
      id="userPopup"
      class="card"
      style="
        display: none;
        position: fixed;
        top: 20%;
        left: 30%;
        background: white;
        padding: 20px;
        border: 1px solid #ccc;
        z-index: 1000;
      "
    >
      <div class="card-body">
        <h5 class="card-title">User Details</h5>
        <p><strong>Name:</strong> <span id="popupName"></span></p>
        <p><strong>Email:</strong> <span id="popupEmail"></span></p>
        <p><strong>Mobile No:</strong> <span id="popupMobileNo"></span></p>
        <p><strong>Address:</strong> <span id="popupAddress"></span></p>
        <p><strong>Login ID:</strong> <span id="popupLoginId"></span></p>
        <button class="btn btn-secondary mt-3" onclick="closePopup()">
          Close
        </button>
      </div>
    </div>

    <div
      class="overlay"
      style="
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 999;
      "
    ></div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/clint.js"></script>
</body>
